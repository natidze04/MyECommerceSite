@model MyECommerceSite.Models.Product

@{
    ViewData["Title"] = "პროდუქტის წაშლა";
}

<h1>პროდუქტის წაშლა</h1>
<h3>დარწმუნებული ხართ, რომ გსურთ ამ პროდუქტის წაშლა?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">აღწერა</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">ფასი</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="წაშლა" class="btn btn-danger" /> |
        <a asp-action="Index">უკან დაბრუნება</a>
    </form>
</div>